<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Waste Hub - Products</title>
    <link rel="website icon" type="png" href="https://cdn-icons-png.flaticon.com/512/712/712747.png">
    <link rel="stylesheet" href="/css/products.css" />
  </head>
  <body>


    <nav><%- include('./partials/navbar.ejs') %></nav>
    <%- include('./partials/flash.ejs') %>

    <video autoplay loop muted class="home-bg">
      <source src="/images/bg.mp4" />
    </video>
    <h1
      style="
        text-align: center;
        width: 95vw;
        margin-top: 5%;
        margin-bottom: 3%;
        color: white;
        font-size: 75px;
      "
    >
      Choose Your Product
    </h1>

    <div
      class="main-content"
      style="
        margin-top: 100px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
      "
    >
      <% for (let productitem of product){ %>

      <link rel="preconnect" href="https://fonts.googleapis.com" />
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
      <link
        href="https://fonts.googleapis.com/css2?family=Roboto+Condensed&family=Roboto:wght@300&display=swap"
        rel="stylesheet"
      />
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
      />

      <main>
        <div class="card-hover card">
          <img
            style="filter: blur(5px);"
            src="<%= productitem.Image %>"
            alt=""
          />
          <div class="card-content">
            <h2><%= productitem.Name %></h2>
            
            <p>
              <% for (let metal of productitem.Metals){ %> 
                  <%= metal %> 
              <% } %>
              </p>
            <a style="color: black;"
            href="#" class="button">
              Add to Cart
            </a>
          </div>
        </div>
      </main>
      <% } %>
    </div>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
